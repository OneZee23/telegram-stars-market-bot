# Application
ENV=dev
PORT=3000
APP_NAME=telegram-stars-market-bot

# Public URL (for webhooks)
# Use for local dev: lt --port 3000 or ngrok
PUBLIC_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASS=postgres
DB_LOG=false
DB_SYNC=false
DB_MIGRATE=false
# DB_CERT_BASE64=  # Optional: Base64 encoded database CA certificate (for production)

# TypeORM CLI (for migrations)
TYPEORM_CLI_HOST=localhost
TYPEORM_CLI_PORT=5432
TYPEORM_CLI_USERNAME=postgres
TYPEORM_CLI_PASSWORD=postgres
TYPEORM_CLI_DATABASE=postgres

# Telegram Bot
BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_API_KEY=your_webhook_secret_key_here

# Fragment API
# Get these values by running: yarn script:fragment-auth
# See docs/FRAGMENT_SETUP.md for detailed instructions
FRAGMENT_COOKIES={"stel_ssid":"","stel_ton_token":""}
FRAGMENT_API_HASH=
FRAGMENT_MNEMONIC=word1 word2 word3 ... word24

# TON Center RPC (optional)
# TONCENTER_RPC_URL=https://toncenter.com/api/v2/jsonRPC
# TONCENTER_RPC_API_KEY=your_toncenter_api_key_here
