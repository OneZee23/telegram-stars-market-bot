{
  "name": "telegram-stars-market-bot",
  "version": "0.0.1",
  "description": "Автоматизированный магазин Telegram Stars дешевле официальной цены",
  "keywords": [
    "telegram",
    "stars",
    "bot",
    "ton",
    "fragment",
    "crypto",
    "nestjs",
    "yookassa"
  ],
  "author": "OneZee",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "build:dev": "nest build -p tsconfig.build.dev.json",
    "start:prod": "node dist/main",
    "local:start": "nest start",
    "local:start:dev": "nest start --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest.config.e2e.js",
    "lint": "sh -c \"eslint 'src{/**/*,/*}.ts'\"",
    "lint:fix": "eslint 'src{/**/*,/*}.ts' --fix",
    "lint:staged": "eslint $(git diff --staged --name-only --diff-filter=AM | grep ^src/.*ts$)",
    "typeorm": "sh typeorm.sh"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.1",
    "openai": "^5.13.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.2.0",
    "telegraf": "^4.15.0",
    "@ston-fi/sdk": "^1.0.0",
    "ton-crypto": "^3.2.0",
    "tonweb": "^0.0.60",
    "tweetnacl": "^1.0.3",
    "typeorm": "0.3.9",
    "undici": "^6.19.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "testPathIgnorePatterns": [
      "node_modules",
      ".*\\.e2e\\.spec\\.ts$"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "tsconfig-paths/register",
      "dotenv/config"
    ],
    "moduleNameMapper": {
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@infra/(.*)$": "<rootDir>/src/infra/$1",
      "^@modules/(.*)$": "<rootDir>/src/modules/$1",
      "^@core/(.*)$": "<rootDir>/src/core/$1",
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  }
}